<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/styles/main.css" />
    <link rel="stylesheet" href="/assets/styles/libraries/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/styles/libraries/animateCss.css" />
    <link
      rel="stylesheet"
      href="/assets/styles/libraries/swiper.bundle.min.css"
    />
    <link rel="stylesheet" href="/assets/styles/libraries/toastify.css" />
    <script src="/assets/javaScript/ckeditor.js"></script>
    <title>Document</title>
  </head>
  <body>
    <%- include("AdminHeader.ejs") %> <% var service = service || {} %>
    <div
      data-service_date="<%= JSON.stringify(service) %>"
      class="editServiceBox"
    >
      <div class="myLoader">
        <div class="loadingio-spinner-ripple-6sk4j73oq33">
          <div class="ldio-6co2x7efp9u">
            <div></div>
            <div></div>
          </div>
        </div>
      </div>
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-5 mb-4">
            <div class="card bg-transparent border-none p-2">
              <h5 class="bannerImage mb-1">Xizmat ishki rasm</h5>
              <input class="w-100 ms-auto service_banner_image" type="file" />
              <hr class="mb-0" />
              <div class="bannerWrapper">
                <div class="d-flex mt-2 justify-content-between">
                  <img style="width: 100px" class="bannerImg" alt="" />
                  <button
                    class="btn btn-close btn-banner-close bg-white"
                  ></button>
                </div>
              </div>
            </div>
            <hr />
            <div class="card bg-transparent border-none p-2">
              <h5 class="productImage mb-1">Xizmat rasmi</h5>
              <input class="w-100 ms-auto service_product_image" type="file" />
              <hr class="mb-0" />
              <div class="productWrapper">
                <div class="d-flex mt-2 justify-content-between">
                  <img style="width: 100px" class="productImg" alt="" />
                  <button
                    class="btn btn-close btn-product-close bg-white"
                  ></button>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6 offset-lg-1">
            <label for="service_title_ru"
              ><h4 class="m-0">Xizmat nomi rus</h4></label
            >
            <textarea
              id="service_title_ru"
              placeholder="service_title_ru"
              name="service_title_ru"
              class="form-control mb-4 service_title_ru"
              cols="30"
              rows="2"
            ></textarea>
            <label for="service_title_uz"
              ><h4 class="m-0">Xizmat nomi uz</h4></label
            >
            <textarea
              id="service_title_uz"
              placeholder="service_title_uz"
              name="service_title_uz"
              class="form-control mb-4 service_title_uz"
              cols="30"
              rows="2"
            ></textarea>
          </div>
          <div>
            <label for="myTextarea10"
              ><h4 class="m-0">Xizmat haqida ma'lumot rus</h4></label
            >
            <div id="toolbar-container1"></div>
            <div
              style="border: 1px solid black"
              placeholder="service_text_ru"
              name="service_text_ru"
              class="form-control mb-4 service_text_ru"
              cols="30"
              rows="2"
              id="myTextarea10"
            ></div>
            <label for="myTextarea11" class="mt-4"
              ><h4 class="m-0">Xizmat haqida ma'lumot uz</h4></label
            >
            <div id="toolbar-container2"></div>
            <div
              style="border: 1px solid black"
              placeholder="service_text_uz"
              name="service_text_uz"
              class="form-control mb-4 service_text_uz"
              cols="30"
              rows="2"
              id="myTextarea11"
            ></div>

            <button class="btn btn-success d-block mt-3 w-100 service_button">
              Tahrirlash
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="/assets/javaScript/toastify.js"></script>
    <script src="/assets/fetchRequests/editService.js"></script>
  </body>
</html>
