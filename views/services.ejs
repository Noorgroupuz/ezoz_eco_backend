<%- include("parts/header.ejs") %>
<div class="services_page">
  <div
    class="top-main-page"
    style="
      background-image: url('../assets/images/services/main_background.jpg');
    "
  >
    <div class="container">
      <h2 class="top-main-page-title"><%= language.service[lan] %></h2>
    </div>
  </div>
  <div class="services_page-wrapper">
    <div class="container">
      <div class="row">
        <% services.forEach(function(item, index){ %>
        <div
        data-wow-duration="0.5s"
          data-wow-delay="<%= index*0.04 %>s"
          class="wow animate__fadeInUp col-md-4 col-sm-6 col-12 mb-sm-5 mb-4"
        >
          <a
            class="text-decoration-none"
            href="/service/<%= item.service_id %>"
          >
            <div class="services_page-wrapper-card">
              <div class="services_page-wrapper-card-img-box">
                <img
                  class="services_page-wrapper-card-img"
                  src="/files/<%= item.service_product_image %>"
                  alt="img"
                />
              </div>
              <div class="services_page-wrapper-card-content">
                <% if(lan === "uz") { %>
                <p class="services_page-wrapper-card-content-title">
                  <%= item.service_title_uz %>
                </p>
                <% } else { %>
                <p class="services_page-wrapper-card-content-title">
                  <%= item.service_title_ru %>
                </p>
                <% } %>
              </div>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
<%- include("parts/footer.ejs") %>
