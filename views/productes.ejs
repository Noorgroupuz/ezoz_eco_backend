<%- include("parts/header.ejs") %>
<div class="productes_page">
  <div
    class="top-main-page"
    style="background-image: url('../assets/images/productes/background.jpg')"
  >
    <div class="container">
      <h2 class="top-main-page-title"><%= language.productes[lan] %></h2>
    </div>
  </div>
  <div class="productes_page-wrapper">
    <div class="container">
      <% productes.forEach(function(item, index){ %>
      <div
        class="product wow <%= index%2===1 ? 'animate__fadeInLeft' : 'animate__fadeInRight' %>"
      >
        <div class="row">
          <div
            class="col-lg-5 mb-lg-0 mb-4 <%= index%2===0 ? '' : 'order-lg-2 order-1' %>"
          >
            <div class="product_image_wrapper">
              <img
                class="product_image"
                src="/files/<%= item.product_image %>"
                alt="img"
              />
              <div class="product_image_wrapper-mask"></div>
            </div>
          </div>
          <div class="col-lg-7 <%= index%2===0 ? '' : 'order-lg-1 order-2' %>">
            <div class="product-content">
              <div class="product-content-wrapper">
                <% if(lan === "uz") { %>
                <h3 class="product-content-wrapper-title">
                  <%= item.product_title_uz %>
                </h3>
                <% } else { %>
                <h3 class="product-content-wrapper-title">
                  <%= item.product_title_ru %>
                </h3>
                <% } %> <% if(lan === "uz") { %>
                <p class="product-content-wrapper-subtitle">
                  <%= item.product_description_uz %>
                </p>
                <% } else { %>
                <p class="product-content-wrapper-subtitle">
                  <%= item.product_description_ru %>
                </p>
                <% } %>
              </div>
              <button class="product-content-link">
                <span><%= language.show[lan] %></span>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="product_modal">
        <div class="product_modal-wrapper">
          <img
            class="product_modal-wrapper-img"
            src="/files/<%= item.product_image %>"
            alt="img"
          />
          <svg
            class="product-modal-closer"
            width="40"
            height="40"
            viewBox="0 0 40 40"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M20.0002 17.6433L28.2502 9.39334L30.6069 11.75L22.3569 20L30.6069 28.25L28.2502 30.6067L20.0002 22.3567L11.7502 30.6067L9.39355 28.25L17.6436 20L9.39355 11.75L11.7502 9.39334L20.0002 17.6433Z"
              fill="white"
            />
          </svg>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<%- include("parts/footer.ejs") %>
