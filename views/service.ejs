<%- include("parts/header.ejs") %>
<div class="service_page">
  <div
    class="top-main-page"
    style="background-image: url('/files/<%= service.service_product_image %>')"
  >
    <div class="container">
      <% if(lan === "uz") { %>
      <h2 class="top-main-page-title"><%= service.service_title_uz %></h2>
      <% } else { %>
      <h2 class="top-main-page-title"><%= service.service_title_ru %></h2>
      <% } %>
      <!-- <h2 class="top-main-page-title">Утилизация медицинских отходов</h2> -->
    </div>
  </div>
  <div class="service_page-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-lg-5 mb-lg-0 mb-3">
          <img
            class="service_page-wrapper-img"
            src="/files/<%= service.service_banner_image %>"
            alt="img"
          />
        </div>
        <div class="col-lg-7">
          <div class="service_page-wrapper-content ck-content">
            <% if(lan === "uz") { %> <%- service.service_text_uz %> <% } else {
            %> <%- service.service_text_ru %> <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="service_page_process">
    <div class="container">
      <h3 class="service_page_process-title">
        <%= language.workSchedule.title[lan] %>
      </h3>
      <div class="process-container">
        <div class="row">
          <div class="col-lg-4">
            <div class="process">
              <div class="process-img-box wow animate__fadeInUp">
                <img src="../assets/images/service/logo1.svg" alt="logo" />
              </div>
              <div class="process_content">
                <h3 class="process_content-title">
                  <%= language.workSchedule.items.item1.title[lan] %>
                </h3>
                <p class="process_content-subtitle">
                  <%= language.workSchedule.items.item1.subtitle[lan] %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="process">
              <div class="process-img-box wow animate__fadeInUp">
                <img src="../assets/images/service/logo2.svg" alt="logo" />
              </div>
              <div class="process_content">
                <h3 class="process_content-title">
                  <%= language.workSchedule.items.item2.title[lan] %>
                </h3>
                <p class="process_content-subtitle">
                  <%= language.workSchedule.items.item2.subtitle[lan] %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="process last_process">
              <div class="process-img-box wow animate__fadeInUp">
                <img src="../assets/images/service/logo3.svg" alt="logo" />
              </div>
              <div class="process_content">
                <h3 class="process_content-title">
                  <%= language.workSchedule.items.item3.title[lan] %>
                </h3>
                <p class="process_content-subtitle">
                  <%= language.workSchedule.items.item3.subtitle[lan] %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="process_line1">
          <img
            class="w-100"
            src="../assets/images/service/line.png"
            alt="line"
          />
          <svg
            class="line1"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle cx="12" cy="12" r="12" fill="#003154" />
            <path
              d="M10 8L15 12.5L10 17"
              stroke="white"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
          <svg
            class="line2"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle cx="12" cy="12" r="12" fill="#003154" />
            <path
              d="M10 8L15 12.5L10 17"
              stroke="white"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </div>
        <div class="process_line2">
          <img src="../assets/images/service/line2.png" alt="line" />

          <svg
            class="line1"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle
              cx="12"
              cy="12"
              r="12"
              transform="rotate(90 12 12)"
              fill="#003154"
            />
            <path
              d="M17 10.0137L12.5 15.0137L8 10.0137"
              stroke="white"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>

          <svg
            class="line2"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <circle
              cx="12"
              cy="12"
              r="12"
              transform="rotate(90 12 12)"
              fill="#003154"
            />
            <path
              d="M17 10.0137L12.5 15.0137L8 10.0137"
              stroke="white"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="application">
  <div class="container">
    <h1 class="application-warning">
      <%= language.application.warning[lan] %>
    </h1>
    <h3 class="application-subtitle"><%= language.application.title[lan] %></h3>
    <div class="row">
      <div class="col-lg-5 col-md-6">
        <h2 class="application_title">
          <%= language.application.subtitle[lan] %>
        </h2>
        <form class="application_form">
          <label for="name"><%= language.application.nameLabel[lan] %></label>
          <input
            class="application_form_name"
            type="text"
            id="name"
            placeholder="<%= language.application.namePlaceholder[lan] %>"
          />
          <div class="application_form_name-wrapper">
            <label for="number"
              ><%= language.application.numberLabel[lan] %></label
            >
            <input
              class="application_form_number"
              type="number"
              id="number"
              placeholder="<%= language.application.numberPlaceholder[lan] %>"
            />
            <span>+998</span>
          </div>
          <label for="appeal"
            ><%= language.application.messageLabel[lan] %></label
          >
          <textarea
            class="application_form_appeal"
            name="appeal"
            id="appeal"
            rows="3"
            placeholder="<%= language.application.messagePlaceholder[lan] %>"
          ></textarea>
          <button type="button" class="application_form_button">
            <span><%= language.application.button[lan] %></span>
            <div class="application_form_button__horizontal"></div>
            <div class="application_form_button__vertical"></div>
          </button>
        </form>
      </div>
      <div class="col-lg-7 col-md-6 d-md-block d-none">
        <div class="application_card h-100">
          <img
            class="application_card-image wow animate__bounceIn"
            src="/assets/images/main_page/appeal.jpg"
            alt="img"
          />
        </div>
      </div>
    </div>
  </div>
</section>
<%- include("parts/footer.ejs") %>
